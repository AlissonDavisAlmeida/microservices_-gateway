{
  "name": "jobber-gateway",
  "main": "app.js",
  "scripts": {
    "start": "pm2 start ./build/app.js -i 5 --attach --watch | pino-pretty -c",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "nodemon -r tsconfig-paths/register ./src/main/app.ts | pino-pretty -c",
    "build": "npx tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "jest",
    "test:watch": "yarn test --watchAll --detectOpenHandles --coverage=false",
    "test:ci": "yarn test --coverage --detectOpenHandles"
  },
  "packageManager": "yarn@4.2.2",
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/bcrypt": "^5",
    "@types/compression": "^1",
    "@types/cookie-session": "^2",
    "@types/cors": "^2",
    "@types/express": "^4",
    "@types/hpp": "^0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.7.0",
    "eslint-plugin-promise": "^6.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@alissondavisalmeida/jobber-shared": "^0.0.9",
    "@elastic/elasticsearch": "^8.13.1",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pino-pretty": "^11.1.0",
    "typescript-transform-paths": "^3.4.7",
    "winston": "^3.13.0"
  }
}
