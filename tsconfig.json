{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "ES2015"
    ],
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@gateway/*": [
        "./*"
      ]
    },
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "outDir": "build",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "./scripts"
  ],
}